@using CA_Employee.Models

@{
    ViewData["Title"] = "Landing Page";
    Layout = "_Layout";
}

@model List<Employee>

<div class="text-center">
    <h1>Please select the employee you wish to view</h1>
    <div class="row mb-3">
        <h4>Copy the URL below and change the value of ID to the int value of the employee ID you wish to see</h4>
        <div class="row">
            <p>/EmployeeDetails/EmployeeDetails/id</p>
        </div>
        @foreach (var employee in Model)
        {
            <div class="row mb-3">

                <div class="col-md-6">
                    <p>Employee Name:</p> @employee.GetFullName()
                </div>
                <div class="col-md-6">
                    <a href="/EmployeeDetails/EmployeeDetails/@employee.ID" class="btn btn-primary">View Employee Details</a>
                </div>
            </div>
        }
    </div>
</div>
